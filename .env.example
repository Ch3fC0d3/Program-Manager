# Database - Supabase Connection Strings
# Get these from: Supabase Dashboard → Settings → Database → Connection string

# Pooled connection (for app queries) - Toggle "Display connection pooling string" ON
# Example: postgresql://postgres.xxxxx:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:5432/postgres
DATABASE_URL="postgresql://postgres.xxxxx:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:5432/postgres"

# Direct connection (for migrations) - Toggle "Display connection pooling string" OFF
# Example: postgresql://postgres:[YOUR-PASSWORD]@db.fegstrmxiitzwldmrowm.supabase.co:5432/postgres
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.xxxxxxxxxxxxxxxxxxxx.supabase.co:5432/postgres"

# Supabase - Get these from: Supabase Dashboard → Settings → API
# Example URL: https://fegstrmxiitzwldmrowm.supabase.co
SUPABASE_URL="https://xxxxxxxxxxxxxxxxxxxx.supabase.co"
# Example anon key: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key_here"

# Supabase CLI - Get from: https://supabase.com/dashboard/account/tokens
SUPABASE_ACCESS_TOKEN="your_supabase_access_token_here"

# OpenAI - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-your_openai_api_key_here"

# Hugging Face - Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY="hf_your_api_token_here"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
# CRITICAL: Generate a strong random secret for production!
# Run this command to generate: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# NEVER use the placeholder value in production
NEXTAUTH_SECRET="REPLACE_WITH_GENERATED_SECRET_MINIMUM_32_CHARS"

# File Upload
UPLOAD_DIR="./public/uploads"
MAX_FILE_SIZE=10485760

# Email - Maileroo SMTP Configuration
# Get these from: https://maileroo.com/dashboard/smtp
MAILEROO_SMTP_HOST="smtp.maileroo.com"
MAILEROO_SMTP_PORT="587"
# Use your Maileroo email address (e.g., username@xxxxx.maileroo.org)
MAILEROO_SMTP_USER="your_username@xxxxx.maileroo.org"
# Use your Maileroo SMTP password
MAILEROO_SMTP_PASSWORD="your_maileroo_smtp_password_here"
# From address (use your Maileroo email or verified domain)
EMAIL_FROM="your_username@xxxxx.maileroo.org"

# Email Inbound - Maileroo Inbound Email-to-Task
# Configure in Maileroo Dashboard → Inbound → Add Route
# Webhook URL: https://yourdomain.com/api/email/inbound
# This allows users to create tasks by sending emails to a dedicated address
INBOUND_EMAIL_ADDRESS="tasks@yourdomain.com"
